<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <%- include('./partials/head'); %>
  </head>
  <body>
    <header>
      <%- include('./partials/header'); %>
    </header>
    <h1>Category: <%= category.name %></h1>
    <ul>
        <% if (category_products.length > 0) { %>
            <% category_products.forEach(function(product) { %>
                <li class="product-card">
                  <img src="/images/uploads/<%= product.img %>" style="width: 100px; height: 100px;">
                  <div class="card-info">
                    <a href="<%= product.url %>"><%= product.name %></a>
                    <p>Category: <%= category.name %></p>
                    <p>Brand: <%= product.brand.name %></p>
                    <p>$<%= product.price.toFixed(2) %></p>
                    <p>Quantity: <%= product.quantity %></p>
                  </div>  
                </li>
             <% }); %>
        <% } else { %>
            <li><p>There are no products in this category.</p></li>
        <% } %>
    </ul>
    <hr>
    <p>
      <a href="<%= category.url %>/delete">Delete Category</a>
    </p>
    <p>
        <a href="<%= category.url %>/update">Update Category</a>
    </p>
    
  </body>
</html>