<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <%- include('./partials/head'); %>
  </head>
  <body>
    <header>
      <%- include('./partials/header'); %>
    </header>
    <h1><%= title %>: <%= category.name %></h1>
    <p><%= category.description %></p>
    
    <% if (category_products.length) { %>
      <p><strong>Delete the following products before attempting to delete this category.</strong></p>
      <div style="margin-left:20px; margin-top:20px;">
        <h4>Books</h4>
        <dl>
          <% category_products.forEach(function(product) { %>
            <dt><a href="<%= product.url %>"><%= product.name %></a></dt>
            <dd><%= product.price %></dd>
          <% }); %>
        </dl>
      </div>
    <% } else { %>
      <p>Do you really want to delete this Category?</p>
      <form method="POST">
        <div class="form-group">
          <input id="categoryid" class="form-control" type="hidden" name="categoryid" value="<%= category._id %>">
        </div>
        <button class="btn btn-primary" type="submit">Delete</button>
      </form>
    <% } %>
    
    
  </body>
</html>